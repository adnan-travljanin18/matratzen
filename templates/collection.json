{
  "wrapper": "section",
  "sections": {
    "banner": {
      "type": "template-collection-banner",
      "settings": {
        "fluid_layout": false,
        "show_collection_description": true,
        "show_collection_image": true,
        "section_bg_color": "#fafaf7",
        "txt_color": "#212529",
        "alignment": "text-center",
        "caption_alignment": "mx-auto"
      }
    },
    "product-grid": {
      "type": "template-collection",
      "custom_css": [
        ".list-unstyled {gap: 1rem;}"
      ],
      "settings": {
        "products_per_page": 16,
        "product_per_row": "3",
        "pagination_type": "loadmore",
        "enable_sub_collections": false,
        "sub_collections": [

        ],
        "enable_filtering": true,
        "filter_type": "horizontal-filters",
        "price_filter_layout": "range_slider",
        "price_filter_values": "",
        "enable_custom_pagination": true,
        "custom_pagination": "16,24,32",
        "open_single_accordians": true,
        "enable_sorting": true
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}

                }
            ],
            "default": "simple"
        }
    ],
    "blocks": [
        {
            "type": "socials",
            "name": "Socials",
            "limit": 1,
            "settings": [
                {
                    "type": "checkbox",
                    "id": "enable_socials",
                    "label": "Enabled?",
                    "default": true
                },
                {
                    "type": "text",
                    "id": "socials_title",
                    "label": "Title",
                    "default": "Connect with Us"
                },
                {
                    "type": "paragraph",
                    "content": "Select Networks"
                },
                {
                    "type": "checkbox",
                    "id": "social_icon_facebook",
                    "label": "Facebook",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "social_icon_twitter",
                    "label": "Twitter",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "social_icon_instagram",
                    "label": "Instagram",
                    "default": true
                }
            ]
        },
        {
            "type": "recent-articles",
            "name": "Recent Articles",
            "limit": 1,
            "settings": [
                {
                    "type": "checkbox",
                    "id": "enable_recent_articles",
                    "label": "Enabled?",
                    "default": true
                },
                {
                    "type": "text",
                    "id": "recent_articles_title",
                    "label": "Title",
                    "default": "Recent Articles"
                },
                {
                    "type": "range",
                    "id": "total_recent_articles",
                    "label": "Articles Limit",
                    "min": 1,
                    "max": 10,
                    "step": 1,
                    "default": 5
                }
            ]
        },
        {
            "type": "tags",
            "name": "Tags",
            "limit": 1,
            "settings": [
                {
                    "type": "checkbox",
                    "id": "enable_tags",
                    "label": "Enabled?",
                    "default": true
                },
                {
                    "type": "text",
                    "id": "tags_title",
                    "label": "Title",
                    "default": "Tags"
                }
            ]
        }
    ]
}

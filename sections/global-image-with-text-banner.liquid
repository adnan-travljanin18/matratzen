<section
    class="section-content banner-image-with-text"
    data-section-id="{{ section.id }}"
    style="background:{{ section.settings.section_bg_color }}; color:{{ section.settings.section_text_color }}"
>
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row {% if section.settings.column != blank %}flex-column {% endif %} {% if section.settings.column_reverse != blank %}flex-column-reverse {% endif %}align-items-center">
            <div class="col-12 col-lg-6 order-lg-2">
                {% render 'img-border-offset', section: section %}
            </div>
            <div class="col-12 col-lg-6 mt-4 mt-lg-0 order-lg-1">
                <div class="inside-block text-center text-lg-end">
                    {% if section.settings.step_heading != blank %}
                        <h6
                            class="mb-2 mb-md-3 text-center text-lg-end text-uppercase letter-wider"
                            style="color:{{ section.settings.border_color }}"
                        >
                            {{ section.settings.step_heading }}
                        </h6>
                    {% endif %}
                    {% if section.settings.heading_txt != blank %}
                        <h2 class="text-white mb-3 text-center text-lg-end font-the-seasons">
                            {{ section.settings.heading_txt }}
                        </h2>
                    {% endif %}
                    {% if section.settings.btn_txt != blank %}
                        <button
                            role="button"
                            data-vf-id="1ew990sn"
                            data-vf-p-type="p"
                            data-vf-p-side="r"
                            data-vf-trigger="click"
                            class="btn btn-primary btn-quiz underline-btn px-0 text-white"
                        >
                            {{ section.settings.btn_txt -}}
                            <span><i class="fa-solid fa-arrow-right" style="margin-left: 10px"></i></span>
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Image With Text Banner",
    "class": "image-text-style",
    "settings": [
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "checkbox",
            "id": "fluid_layout",
            "label": "Full Width Layout?",
            "default": false
        },
        {
            "type": "header",
            "content": "Content"
        },
        {
            "type": "textarea",
            "id": "heading_txt",
            "label": "Heading Text",
            "default": "Awesome Heading"
        },
        {
            "type": "text",
            "id": "step_heading",
            "label": "Step Heading",
            "default": "Awesome Sub Heading"
        },
        {
            "type": "text",
            "id": "btn_txt",
            "label": "Button Text"
        },
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image",
            "info": "For Better Viewing Use Example dimentions: 775*735 ( Aspect Ratio: 1.05 )"
        },
        {
            "type": "url",
            "id": "url_on_image",
            "label": "Add Url on Image"
        },
        {
            "type": "header",
            "content": "styling"
        },
        {
            "type": "color",
            "id": "section_bg_color",
            "label": "Background Color",
            "default": "#131E27"
        },
        {
            "type": "color",
            "id": "section_text_color",
            "label": "Text Color",
            "default": "#fff"
        },
        {
            "type": "color",
            "id": "border_color",
            "label": "Border Color",
            "default": "#6490B2"
        },
        {
            "type": "select",
            "id": "alignment",
            "label": "Text Alignment",
            "options": [
                {
                    "value": "text-center",
                    "label": "Center"
                },
                {
                    "value": "text-left",
                    "label": "Left"
                },
                {
                    "value": "text-end",
                    "label": "Right"
                }
            ],
            "default": "text-left"
        }
    ],
    "presets": [
        {
            "name": "Image With Text Banner",
            "category": "Content"
        }
    ]
}
{% endschema %}

<style>
    .inside-block ul li:before {
        content: '\f149';
        display: inline-block;
        color: var(--bs-color-primary);
        text-rendering: auto;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        margin-right: 0.9rem;
        font-size: 1.8rem;
        vertical-align: middle;
    }
</style>

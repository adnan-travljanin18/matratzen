<section
  class="section-content banner-image-with-text"
  data-section-id="{{ section.id }}"
  style="background:{{ section.settings.section_bg_color }}; color:{{ section.settings.section_text_color }}"
>
  <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
    {% if section.settings.heading_txt != blank %}
      {% if section.settings.heading_above == true %}
        <h3 class="mb-3 text-center">{{ section.settings.heading_txt }}</h3>
      {% endif %}
    {% endif %}
    <div class="row {% if section.settings.column != blank %}flex-column {% endif %} {% if section.settings.column_reverse != blank %}flex-column-reverse {% endif %}align-items-center">
      <div class="col-12 col-lg-5 order-lg-2">
        <div
          class="banner-img-border-collection {{ section.settings.height }}"
          style="color:{{ section.settings.border_color }}"
        >
          {%- if section.settings.image != blank -%}
            {% render 'image-walker',
              image: section.settings.image,
              alt: section.settings.heading_txt,
              size: '800',
              classes: 'w-100 border-radius top-left-lg'
            %}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      </div>
      <div class="col-12 col-lg-5 col-xl-6 mt-4 mt-md-0 order-lg-1">
        <div class="inside-block">
          {% if section.settings.step_heading != blank %}
            <h6
              class="mb-2 mb-md-3 text-center text-lg-end text-uppercase"
              style="color:{{ section.settings.border_color }}"
            >
              {{ section.settings.step_heading }}
            </h6>
          {% endif %}
          {% if section.settings.heading_txt != blank %}
            <h1 class="mb-3 banner-image-with-text-heading text-center text-lg-end">
              {{ section.settings.heading_txt }}
            </h1>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image With Text Banner",
  "class": "image-text-style",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "fluid_layout",
      "label": "Full Width Layout?",
      "default": false
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "heading_txt",
      "label": "Heading Text",
      "default": "Awesome Heading"
    },
    {
      "type": "text",
      "id": "step_heading",
      "label": "Step Heading",
      "default": "Awesome Sub Heading"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image",
      "info": "For Better Viewing Use Example dimentions: 775*735 ( Aspect Ratio: 1.05 )"
    },
    {
      "type": "url",
      "id": "url_on_image",
      "label": "Add Url on Image"
    },
    {
      "type": "header",
      "content": "styling"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Background Color",
      "default": "#131E27"
    },
    {
      "type": "color",
      "id": "section_text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#6490B2"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-end",
          "label": "Right"
        }
      ],
      "default": "text-left"
    }
  ],
  "presets": [
    {
      "name": "Image With Text Banner",
      "category": "Content"
    }
  ]
}
{% endschema %}

<style>
  .inside-block ul li:before {
    content: '\f149';
    display: inline-block;
    color: var(--bs-color-primary);
    text-rendering: auto;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    margin-right: 0.9rem;
    font-size: 1.8rem;
    vertical-align: middle;
  }
</style>

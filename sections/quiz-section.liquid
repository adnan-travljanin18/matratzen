<section class="section-content banner-image-with-text"  data-section-id="{{ section.id }}" style="background:{{ section.settings.section_bg_color }}; color:{{ section.settings.section_text_color }}">
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row align-items-center">
                <div class="col-12 col-lg-5 order-lg-2">
                    <div class="banner-img-border {{ section.settings.height }}" style="color:{{ section.settings.border_color }}">
                        {%- if section.settings.image != blank -%}
                            {% if section.settings.url_on_image != blank %}
                                <a href="{{ section.settings.url_on_image }}">
                                    <img
                                        srcset="
                                        {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                                        {%- if section.settings.image.width >= 520 -%}{{ section.settings.image | image_url: width: 520 }} 520w,{%- endif -%}
                                        {%- if section.settings.image.width >= 650 -%}{{ section.settings.image | image_url: width: 650 }} 650w,{%- endif -%}
                                        {%- if section.settings.image.width >= 780 -%}{{ section.settings.image | image_url: width: 780 }} 780w,{%- endif -%}
                                        {%- if section.settings.image.width >= 900 -%}{{ section.settings.image | image_url: width: 900 }} 900w,{%- endif -%}
                                        {%- if section.settings.image.width >= 1000 -%}{{ section.settings.image | image_url: width: 1000 }} 1000w,{%- endif -%}"
                                        src="{{ section.settings.image | image_url: width: 50 }}"
                                        sizes="(min-width: {{ settings.container_width }}) {{ settings.container_width | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), 100vw"
                                        alt="{{ section.settings.image.alt | escape }}"
                                        class="w-100"
                                        loading="lazy"
                                        width="{{ section.settings.image.width | divided_by: 3 }}"
                                        height="{{ section.settings.image.height | divided_by: 3 }}"
                                    >
                                </a>
                            {% else %}
                                <img
                                    srcset="
                                    {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                                    {%- if section.settings.image.width >= 520 -%}{{ section.settings.image | image_url: width: 520 }} 520w,{%- endif -%}
                                    {%- if section.settings.image.width >= 650 -%}{{ section.settings.image | image_url: width: 650 }} 650w,{%- endif -%}
                                    {%- if section.settings.image.width >= 780 -%}{{ section.settings.image | image_url: width: 780 }} 780w,{%- endif -%}
                                    {%- if section.settings.image.width >= 900 -%}{{ section.settings.image | image_url: width: 900 }} 900w,{%- endif -%}
                                    {%- if section.settings.image.width >= 1000 -%}{{ section.settings.image | image_url: width: 1000 }} 1000w,{%- endif -%}"
                                    src="{{ section.settings.image | image_url: width: 50 }}"
                                    sizes="(min-width: {{ settings.container_width }}) {{ settings.container_width | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), 100vw"
                                    alt="{{ section.settings.image.alt | escape }}"
                                    class="w-100"
                                    loading="lazy"
                                    width="{{ section.settings.image.width | divided_by: 3 }}"
                                    height="{{ section.settings.image.height | divided_by: 3 }}"
                                >
                            {% endif %}
                        {%- else -%}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}

                    </div>
                </div>
                <div class="col-12 col-lg-5 col-xl-6 mt-4 mt-md-0 order-lg-1">
                    <div class="inside-block">
                        {% if section.settings.step_heading != blank %}
                            <h6 class="mb-2 mb-md-3 text-center text-lg-end text-uppercase" style="color:{{ section.settings.border_color }}">{{ section.settings.step_heading }}</h6>
                        {% endif %}
                        {% if section.settings.heading_txt != blank %}
                                <h1 class="mb-3 text-lg-end banner-image-with-text-heading text-center ">{{ section.settings.heading_txt }}</h1> 
                        {% endif %}  
                        {% if section.settings.steps_captions != blank %}
                            {% assign caption = section.settings.steps_captions | newline_to_br | strip_newlines | split: '<br />' %}
                            <ul class="list-unstyled mb-5">
                                {% for cap in caption %}
                                    <li class="mb-2 mb-md-3">{{ cap }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                {% if section.settings.step_heading != blank %}
                    <h6 class="text-center text-lg-start text-uppercase">{{ section.settings.step_heading }}</h6>
                {% endif %}
                {% if section.settings.txt != blank %}
                    <div class="text-center text-lg-start">{{ section.settings.txt }}</div>
                {% endif %}  
            </div>
            <div class="col-12 col-lg-6 text-center text-lg-end">
                {% if section.settings.btn_txt != blank %}
                    <button role="button" data-vf-id="1ew990sn" data-vf-p-type="p" data-vf-p-side="r" data-vf-trigger="click"  class="btn btn-primary btn-quiz underline-btn">{{ section.settings.btn_txt }}<span><i class="fa-solid fa-arrow-right" style="margin-left: 10px"></i></span></button>
                {% endif %}
            </div>
        </div>
    </div>
</section>
 

{% schema %}
    {
        "name": "Quiz Section",
        "class": "quiz-section-style",
        "settings": [
            {
                "type": "header",
                "content": "Layout"
            },
            {
                "type": "checkbox",
                "id": "fluid_layout",
                "label": "Full Width Layout?",
                "default": false
            },
            {
                "type": "header",
                "content": "Content"
            },
            {
                "type": "textarea",
                "id": "heading_txt",
                "label": "Heading Text",
                "default": "Awesome Heading"
            },
            {
                "type": "richtext",
                "id": "txt",
                "label": "Text",
                "default": "<p>Lipsum dolor sit amet, consectetur adipiscing elit. Aliquam pulvinar ac tortor imperdiet commodo.</p>"
            },
            {
                "type": "text",
                "id": "step_heading",
                "label": "Step Heading",
                "default": "Awesome Sub Heading"
            },
            {
                "type": "header",
                "content": "Button"
            },
            {
                "type": "text",
                "id": "btn_txt",
                "label": "Button Text"
            },
            {
                "type": "header",
                "content": "Image"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Select Image"
            },
            {
                "type":"header",
                "content":"styling"
            },
            {
                "type": "color",
                "id": "section_bg_color",
                "label": "Background Color",
                "default": "#131E27"
            },
            {
                "type": "color",
                "id": "section_text_color",
                "label": "Text Color",
                "default": "#fff"
            },
            {
                "type": "color",
                "id": "border_color",
                "label": "Border Color",
                "default": "#6490B2"
            },
            {
                "type": "select",
                "id": "alignment",
                "label": "Text Alignment",
                "options": [
                    {
                        "value": "text-center",
                        "label": "Center"
                    },
                    {
                        "value": "text-left",
                        "label": "Left"
                    },
                    {
                        "value": "text-end",
                        "label": "Right"
                    }
                ],
                "default": "text-left"
            }
        ],
        "presets": [
            {
                "name": "Quiz Section",
                "category": "Custom"
            }
        ]
    }
{% endschema %}


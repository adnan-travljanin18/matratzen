<section class="parallax-section">
    <button role="button" data-vf-id="1ew990sn" data-vf-p-type="p" data-vf-p-side="r" data-vf-trigger="click" style="all:unset;background:#0066ff;border-radius:8px;font-size:16px;color:#ffffff;padding:11px 22px;cursor:pointer;font-weight:bold;line-height:1.3"> Click me</button>
</section>

<!-- The overlay and modal -->
<div id="overlay" class="overlay" onclick="closeModal()">
    <div id="modal" class="modal">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <iframe src="#vf-1ew990sn-p-r" width="100%" height="100%" frameborder="0"></iframe>
    </div>
</div>

<style>
.parallax-section {
    background-image: url('https://cdn.shopify.com/s/files/1/0591/2130/3625/files/blue-matress.jpg?v=1699609198'); /* Add the path to your background image */
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-align: center;
}

        /* Style for the button in the parallax section */
        .open-modal-btn {
            padding: 15px 30px;
            font-size: 18px;
            background-color: #3498db;
            color: #fff;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Style for the overlay */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
            z-index: 1;
        }

        /* Style for the modal */
        .modal {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            max-width: 80%;
            max-height: 80%;
            overflow: auto;
        }

        /* Style for the close button */
        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            color: #333;
            font-size: 24px;
        }
    </style>
<script src="https://app.veeform.com/external/onsite.js" async></script>


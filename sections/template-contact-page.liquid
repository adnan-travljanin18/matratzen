<section>
    <div style="width: 100%">
        <iframe
            width="100%"
            height="600"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
            src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=51.6804093%207.815197+(Serenity)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
        ></iframe>
    </div>
    <div class="col-11 mx-auto contact-form-container">
        <div>
            <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
                <div class="row align-items-center no-gutter">
                    <div class="col-12 pt-4 pb-4 text-center px-sm-4">
                        <h1 class="fw-semibold letter-spacing mb-2">{{ section.settings.heading }}</h1>
                        <p class="col-xl-5 col-lg-8 mx-auto px-xl-1 px-3 fw-light letter-spacing mb-0">
                            {{ section.settings.txt }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="pb-md-6 pb-9">
            <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
                <div class="col-lg-11 mx-auto">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <div class="mb-4">
                                {% comment %} <h3 class="fw-semibold letter-spacing mb-4 small-contact-title">{{ page.title }}</h3> {% endcomment %}
                                <div class="d-md-flex">
                                    {% comment %}
                                        <div class="mt-md-0 mt-4">
                                            <h6 class="fw-normal font-family-base letter-spacing-xl text-uppercase mb-2">{{ section.settings.social_heading }}</h6>
                                            {% if section.settings.show_social_links %}
                                                <ul class="social-links list-unstyled list-inline mb-0">
                                                    {% if section.settings.social_icon_instagram %}
                                                        <li class="list-inline-item">
                                                            <a {% if settings.social_instagram_link != blank %}href="{{ settings.social_instagram_link }}"{% endif %} target="_blank" style="color: {{ section.settings.footer_top_link_color }};"  name="Instagram" title="Instagram" rel="nofollow noreferrer" aria-label="Instagram"
                                                            class="d-flex align-items-center justify-content-center text-decoration-none">
                                                                <span class="icon-instagram d-flex text-white"></span>
                                                            </a>
                                                        </li>
                                                    {% endif %}

                                                    {% if section.settings.social_icon_facebook %}
                                                        <li class="list-inline-item">
                                                            <a {% if settings.social_facebook_link != blank %}href="{{ settings.social_facebook_link }}"{% endif %} target="_blank" style="color: {{ section.settings.footer_top_link_color }};" name="Facebook" title="Facebook" rel="nofollow noreferrer" aria-label="Facebook"
                                                            class="d-flex align-items-center justify-content-center text-decoration-none">
                                                                <span class="icon-facebook d-flex text-white"></span>
                                                            </a>
                                                        </li>
                                                    {% endif %}

                                                    {% if section.settings.social_icon_pinterest %}
                                                        <li class="list-inline-item">
                                                            <a {% if settings.social_pinterest_link != blank %}href="{{ settings.social_pinterest_link }}"{% endif %} target="_blank" style="color: {{ section.settings.footer_top_link_color }};" name="pinterest" title="pinterest" rel="nofollow noreferrer" aria-label="pinterest"
                                                            class="d-flex align-items-center justify-content-center text-decoration-none">
                                                                <span class="icon-pinterest d-flex text-white"></span>
                                                            </a>
                                                        </li>
                                                    {% endif %}

                                                    {% if section.settings.social_icon_twitter %}
                                                        <li class="list-inline-item">
                                                            <a {% if settings.social_twitter_link != blank %}href="{{ settings.social_twitter_link }}"{% endif %} target="_blank" style="color: {{ section.settings.footer_top_link_color }};"  name="Twitter" title="Twitter" rel="nofollow noreferrer" aria-label="Twitter"
                                                            class="d-flex align-items-center justify-content-center text-decoration-none">
                                                                <span class="icon-twitter d-flex text-white"></span>
                                                            </a>
                                                        </li>
                                                    {% endif %}

                                                    {% if section.settings.social_icon_youtube %}
                                                        <li class="list-inline-item">
                                                            <a {% if settings.social_youtube_link != blank %}href="{{ settings.social_youtube_link }}"{% endif %} target="_blank" style="color: {{ section.settings.footer_top_link_color }};"  name="YouTube" title="YouTube" rel="nofollow noreferrer" aria-label="YouTube"
                                                            class="d-flex align-items-center justify-content-center text-decoration-none">
                                                                <span class="icon-youtube d-flex text-white"></span>
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                            {% endif %}
                                        </div>
                                    {% endcomment %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <div class="col-12 col-md-10 pb-6 border-bottom d-none d-lg-block">
                                        <h3>Contact Information</h3>
                                        <p>Fill up the form and our Team will get back to you within 24 hours</p>
                                    </div>
                                    <div class="pe-md-13 pb-6 pt-lg-6 contact-links">
                                        <a
                                            href="tel:{{ section.settings.phone_number }}"
                                            class="fw-light letter-spacing font-family-base mb-0"
                                        >
                                            {{- section.settings.phone_number -}}</a
                                        ><br>
                                        <a
                                            href="mailto:{{ section.settings.email_name }}"
                                            class="fw-light letter-spacing font-family-base mb-0"
                                        >
                                            {{- section.settings.email_name -}}
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="contact page-width page-width--narrow spaced-section">
                                        <div class="german-contact" id="c1g_contact7948"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script
    src="https://www.cloudonegalaxy.com/cloud/contact/contact.js"
    data-formId="7948"
    data-shop="matratzen1.myshopify.com"
    defer="defer"
></script>
<style>
    .contact_banner {
        padding-top: 100%;
    }
    .c1gFormGroup,
    .c1gFormbtn {
        padding: 0 !important;
    }
    #c1g_contact7945 {
        background-color: #fff !important;
    }
    .c1gFnLabel,
    .c1gFeLabel,
    .c1gFsLabel,
    .c1gFmLabel {
        display: none;
    }
    .c1gInputLbl {
        padding: 8px 20px !important;
        border-radius: 50px !important;
        border: 1px solid #cfd8dc !important;
        font-weight: 300 !important;
        font-family: 'Urbanist' !important;
    }
    .c1gInputLbl:last-child {
        border-radius: 16px !important;
    }
    .c1gFormbtn button {
        width: 100% !important;
        border-radius: 50px !important;
    }
    @media screen and (min-width: 500px) and (max-width: 992px) {
        .contact_banner {
            padding-top: 60%;
        }
    }

    @media screen and (min-width: 992px) {
        .contact_banner {
            padding-top: 80%;
        }
    }

    .contact_banner img,
    .contact_banner svg {
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        position: absolute;
        object-fit: contain;
    }
</style>

{% schema %}
{
    "name": "t:sections.page.name",
    "tag": "section",
    "class": "spaced-section",
    "settings": [
        {
            "type": "page",
            "id": "page",
            "label": "t:sections.page.settings.page.label"
        },
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "checkbox",
            "id": "fluid_layout",
            "label": "Full Width Layout?",
            "default": false
        },
        {
            "type": "header",
            "content": "styling"
        },
        {
            "type": "color",
            "id": "section_bg_color",
            "label": "Background Color",
            "default": "#FAFAF7"
        },
        {
            "type": "color",
            "id": "section_txt_color",
            "label": "Text Color",
            "default": "#000000"
        },
        {
            "type": "textarea",
            "id": "heading",
            "label": "Heading Text"
        },
        {
            "type": "textarea",
            "id": "txt",
            "label": "Text"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image",
            "info": "Use 650x650 sized image."
        },
        {
            "type": "text",
            "id": "email_heading",
            "label": "Heading",
            "default": "Email Us"
        },
        {
            "type": "text",
            "id": "email_name",
            "label": "Email",
            "default": "customerservice@serenitybett.de"
        },
        {
            "type": "text",
            "id": "phone_number",
            "label": "Phone Number",
            "default": "+1 (30) 265 3523"
        },
        {
            "type": "text",
            "id": "social_heading",
            "label": "Heading",
            "default": "Connect with Us"
        },
        {
            "type": "checkbox",
            "id": "show_social_links",
            "label": "Show Social Links?",
            "default": true
        },
        {
            "type": "paragraph",
            "content": "Select Networks"
        },
        {
            "type": "checkbox",
            "id": "social_icon_facebook",
            "label": "Facebook",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "social_icon_pinterest",
            "label": "pinterest",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "social_icon_twitter",
            "label": "Twitter",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "social_icon_instagram",
            "label": "Instagram",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "social_icon_youtube",
            "label": "YouTube",
            "default": true
        }
    ],
    "presets": [
        {
            "name": "t:sections.page.presets.name"
        }
    ]
}
{% endschema %}

<script>
    // Remove the 'swiper-button-disabled' class from the next button
    document.addEventListener('DOMContentLoaded', function () {
        var nextButton = document.getElementById('slide-next-button');
        if (nextButton) {
            nextButton.classList.remove('swiper-button-disabled');
            nextButton.removeAttribute('aria-disabled');
        }
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    const images = document.querySelectorAll('.product--media img');
    const modal = document.getElementById('imagePopupModal');
    const closeModal = document.querySelector('.image-popup-close');
    const popupSwiperContainer = modal.querySelector('.swiper-container .swiper-wrapper');
    const zoomInButton = document.getElementById('zoomInButton');
    const zoomOutButton = document.getElementById('zoomOutButton');

    let popupSwiper;
    let currentZoom = 1;

    // Initialize Swiper instance
    popupSwiper = new Swiper('.swiper-popup', {
        loop: true,
        slidesPerView: 1,
        spaceBetween: 15,
        grabCursor: true,
        navigation: {
            nextEl: '.swiper-button-next-popup',
            prevEl: '.swiper-button-prev-popup'
        },
        pagination: {
            el: '.swiper-pagination-popup',
            clickable: true,
            bulletClass: 'swiper-pagination-bullet-popup',
            bulletActiveClass: 'swiper-pagination-bullet-active-popup'
        },
    });

    function openPopup(index) {
        popupSwiper.removeAllSlides(); // Clear existing slides

        images.forEach((img, idx) => {
            const slide = document.createElement('div');
            slide.className = 'swiper-slide align-self-center';
            slide.innerHTML = `<img src="${img.src}" alt="${img.alt}" class="image-popup-modal-content">`;
            popupSwiper.appendSlide(slide); // Add slide to Swiper instance
        });

        popupSwiper.slideTo(index, 0, false);
        modal.style.display = 'block';

        // Reset zoom level and button states
        currentZoom = 1;
        zoomInButton.disabled = false;
        zoomOutButton.disabled = true;
    }

    images.forEach((img, index) => {
        img.addEventListener('click', function () {
            openPopup(index);
        });
    });

    closeModal.addEventListener('click', function () {
        modal.style.display = 'none';
        resetZoom();
    });

    window.addEventListener('click', function (event) {
        if (event.target == modal) {
            modal.style.display = 'none';
            resetZoom();
        }
    });

    function zoomImage(scale) {
        const currentImage = document.querySelector('.swiper-slide-active img');
        if (currentImage) {
            currentZoom = scale;
            currentImage.style.transform = `scale(${currentZoom})`;

            // Update button states based on currentZoom
            if (currentZoom >= 2) {
                zoomInButton.disabled = true;
            } else {
                zoomInButton.disabled = false;
            }

            if (currentZoom <= 1) {
                zoomOutButton.disabled = true;
            } else {
                zoomOutButton.disabled = false;
            }
        }
    }

    function resetZoom() {
        currentZoom = 1;
        const images = document.querySelectorAll('.image-popup-modal-content');
        images.forEach(img => {
            img.style.transform = 'scale(1)';
        });
        zoomInButton.disabled = false;
        zoomOutButton.disabled = true;
    }

    zoomInButton.addEventListener('click', function () {
        zoomImage(2);
    });

    zoomOutButton.addEventListener('click', function () {
        zoomImage(1);
    });
});
</script>

